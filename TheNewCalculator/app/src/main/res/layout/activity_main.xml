<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/functionPad"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="100dp"
        android:layout_below="@id/input"
        android:textSize="30sp" />

    <Button
        android:id="@+id/buttonAC"
        android:layout_width="176dp"
        android:layout_height="wrap_content"
        android:layout_weight=".25"
        android:layout_below="@id/textView1"
        android:text="AC"
        android:textSize="25sp"
        android:onClick="click"/>
    <Button
        android:id="@+id/buttonDiv"
        android:layout_width="176dp"
        android:layout_height="wrap_content"
        android:layout_weight=".25"
        android:layout_below="@id/textView1"
        android:layout_toRightOf="@id/buttonAC"
        android:text="/"
        android:textSize="25sp"
        android:onClick="click"/>

    <Button
        android:id="@+id/button7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight=".25"
        android:layout_below="@id/buttonAC"
        android:text="7"
        android:textSize="25sp"
        android:onClick="click"/>

    <Button
        android:id="@+id/button8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight=".25"
        android:layout_below="@id/buttonAC"
        android:layout_toRightOf="@id/button7"
        android:text="8"
        android:textSize="25sp"
        android:onClick="click"/>

    <Button
        android:id="@+id/button9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight=".25"
        android:layout_below="@id/buttonAC"
        android:layout_toRightOf="@id/button8"
        android:text="9"
        android:textSize="25sp"
        android:onClick="click"/>

    <Button
        android:id="@+id/multiply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight=".25"
        android:layout_below="@id/buttonDiv"
        android:layout_toRightOf="@id/button9"
        android:text="*"
        android:textSize="25sp"
        android:onClick="click"/>

    <Button
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight=".25"
        android:layout_below="@id/button7"
        android:text="4"
        android:textSize="25sp"
        android:onClick="click"/>

    <Button
        android:id="@+id/button5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight=".25"
        android:layout_below="@id/button8"
        android:layout_toRightOf="@id/button4"
        android:text="5"
        android:textSize="25sp"
        android:onClick="click"/>

    <Button
        android:id="@+id/button6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight=".25"
        android:layout_below="@id/button9"
        android:layout_toRightOf="@id/button5"
        android:text="6"
        android:textSize="25sp"
        android:onClick="click"/>

    <Button
        android:id="@+id/buttonSubtract"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight=".25"
        android:layout_below="@id/multiply"
        android:layout_toRightOf="@id/button6"
        android:text="-"
        android:textSize="25sp"
        android:onClick="click"/>
    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight=".25"
        android:layout_below="@id/button6"
        android:text="1"
        android:textSize="25sp"
        android:onClick="click"/>
    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight=".25"
        android:layout_below="@id/button5"
        android:layout_toRightOf="@id/button1"
        android:text="2"
        android:textSize="25sp"
        android:onClick="click"/>
    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight=".25"
        android:layout_below="@id/button6"
        android:layout_toRightOf="@id/button2"
        android:text="3"
        android:textSize="25sp"
        android:onClick="click"/>
    <Button
        android:id="@+id/buttonAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight=".25"
        android:layout_below="@id/buttonSubtract"
        android:layout_toRightOf="@id/button3"
        android:text="+"
        android:textSize="25sp"
        android:onClick="click"/>



    <Button
        android:id="@+id/button0"
        android:layout_width="176dp"
        android:layout_height="wrap_content"
        android:layout_weight=".25"
        android:layout_below="@id/button1"
        android:text="0"
        android:textSize="25sp"
        android:onClick="click"/>
    <Button
        android:id="@+id/buttonDesimal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight=".25"
        android:layout_below="@id/button3"
        android:layout_toRightOf="@id/button0"
        android:text="."
        android:textSize="25sp"
        android:onClick="click"/>
    <Button
        android:id="@+id/buttonEqual"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight=".25"
        android:layout_below="@id/buttonAdd"
        android:layout_toRightOf="@id/buttonDesimal"
        android:text="="
        android:textSize="25sp"
        android:onClick="click"/>


</RelativeLayout>